<h1>Categoria de Recomendaciones</h1>

<table class="table">
  <thead>
    <tr>
      <th>Recomendaciones</th>
      <th>Categorias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recoms.each do |recom| %>
      <tr>
        <td><%= recom.recomendacion.tipo %></td>
        <td><%= recom.catereco.tipo %></td>
        <td><%= link_to 'Show', recom %></td>
        <td><%= link_to 'Edit', edit_recom_path(recom) %></td>
        <td><%= link_to 'Destroy', recom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria de Recomendacion', new_recom_path %>
